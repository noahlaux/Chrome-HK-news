{
  "name": "Chrome HackerNews",
  "version": "1.21",
  "manifest_version": 3,
  "description": "Display the most popular Hacker News on a list with fetched images, and show desktop and badge notification when new items arrives",
  "icons": {
    "48": "img/icon.gif",
    "128": "img/icon.gif"
  },
  "browser_action": {
    "default_title": "Hacker News",
    "default_icon": "img/icon.gif",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "background": {
    "scripts": [
      "js/lib.js",
      "js/background.js"
      ]
    },
  "permissions": [
    "<all_urls>",
    "notifications",
    "http://news.ycombinator.com/",
    "http://*.google-analytics.com/",
    "https://*.google-analytics.com/"
  ]
}