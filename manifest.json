{
  "name": "Chrome HackerNews",
  "version": "1.11",
  "manifest_version": 2,
  "description": "Display the most popular Hacker News on a list, and show desktop notification when new items arrives",
  "browser_action": {
    "default_icon": "img/icon.gif",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "background": { 
    "scripts": ["js/lib.js","js/background.js"] 
    },
  "permissions": [
    "notifications",
    "http://news.ycombinator.com/",
    "http://*.google-analytics.com/",
    "https://*.google-analytics.com/"
  ]
}